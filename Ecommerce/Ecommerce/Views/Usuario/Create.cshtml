@model Ecommerce.Models.Usuario

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm("Create", "Usuario", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        <legend>Cadastrar Usuário</legend>
        @Html.ValidationSummary(true, null, new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Cep,
                    new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Cep,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "CEP do usuário"
                        })
                @Html.ValidationMessageFor(model => model.Cep, null,
                        new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Buscar"
                       class="btn btn-primary"
                       formaction="PesquisarCep"
                       formmethod="post" />
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Logradouro,
                    new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Logradouro,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Endereço do usuário",
                            @readonly = ""
                        })
                @Html.ValidationMessageFor(model => model.Logradouro, null,
                        new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Bairro,
                    new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Bairro,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Bairro do usuário",
                            @readonly = ""
                        })
                @Html.ValidationMessageFor(model => model.Bairro, null,
                        new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Localidade,
                    new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Localidade,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Cidade do usuário",
                            @readonly = ""
                        })
                @Html.ValidationMessageFor(model => model.Localidade, null,
                        new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Uf,
                    new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Uf,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Estado do usuário",
                            @readonly = ""
                        })
                @Html.ValidationMessageFor(model => model.Uf, null,
                        new { @class = "text-danger" })
            </div>
        </div>
        <legend>Dados Pessoais</legend>
        <div class="form-group">
            @Html.LabelFor(model => model.Nome,
                    new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Nome,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Nome do usuário"
                        })
                @Html.ValidationMessageFor(model => model.Nome, null,
                        new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email,
                    new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Email,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "E-mail do usuário"
                        })
                @Html.ValidationMessageFor(model => model.Email, null,
                        new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Senha,
                    new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.PasswordFor(model => model.Senha,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Senha do usuário"
                        })
                @Html.ValidationMessageFor(model => model.Senha, null,
                        new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmacaoSenha,
                    new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.PasswordFor(model => model.ConfirmacaoSenha,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Confirmação de senha do usuário"
                        })
                @Html.ValidationMessageFor(model => model.ConfirmacaoSenha, null,
                        new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Cadastrar"
                       class="btn btn-primary">
            </div>
        </div>
    </fieldset>
}
